{
  "name": "subtitle-shifter",
  "version": "1.0.0",
  "description": "A web application to shift SRT subtitle timings",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js & npm run css:watch",
    "dev:server": "nodemon server.js",
    "css:build": "tailwindcss -i ./public/css/input.css -o ./public/css/styles.css",
    "css:watch": "tailwindcss -i ./public/css/input.css -o ./public/css/styles.css --watch",
    "build": "npm run css:build"
  },
  "keywords": [
    "subtitle",
    "srt",
    "time-shift",
    "sync"
  ],
  "author": "Ahmad Wael",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "subtitle": "^4.2.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
