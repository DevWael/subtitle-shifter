{
  "name": "subtitle-shifter",
  "version": "1.0.0",
  "description": "A desktop application to shift SRT subtitle timings",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js & npm run css:watch",
    "dev:server": "nodemon server.js",
    "css:build": "tailwindcss -i ./public/css/input.css -o ./public/css/styles.css",
    "css:watch": "tailwindcss -i ./public/css/input.css -o ./public/css/styles.css --watch",
    "build": "npm run css:build",
    "electron": "electron .",
    "electron:build": "npm run css:build && electron-builder",
    "electron:build:all": "npm run css:build && electron-builder -mwl"
  },
  "keywords": [
    "subtitle",
    "srt",
    "time-shift",
    "sync",
    "desktop"
  ],
  "author": "Ahmad Wael",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "subtitle": "^4.2.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.bbioon.subtitle-shifter",
    "productName": "Subtitle Shifter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "public/**/*",
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}